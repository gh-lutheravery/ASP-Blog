@model Post

<article class="media content-section">
    <div class="media-body">
        <div class="article-metadata">
            <p class="mr-2" style="display: inline" href="#">@Model.User.NormalizedUserName</p>
            <small class="text-muted">@Model.DatePosted.ToLongDateString()</small>
            <div>
                <a asp-controller="Post" asp-action="PostUpdate" asp-route-id="@Model.PostId" class="btn btn-secondary btn-sm mt-1 mb-1">Update</a>
                <a asp-controller="Post" asp-action="PostDelete" asp-route-id="@Model.PostId" class="btn btn-danger btn-sm mt-1 mb-1 ml-2">Delete</a>
            </div>
        </div>
        <h2 class="article-title">@Model.Title</h2>
        <p class="article-content">@Model.Content</p>
    </div>
</article>